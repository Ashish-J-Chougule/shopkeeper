<%= form_for @comic, :html => {:class => "form-horizontal center"} do |f| %>
<% if @comic.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@comic.errors.count, "error") %> prohibited this comic from being saved:</h2>

  <ul>
    <% @comic.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :title %><br>
  <div class="col-md-8">
    <%= f.text_field :title %>
  </div>
</div>
<div class="form-group">
  <%= f.label :author %><br>
  <div class="col-md-8">
    <%= f.text_field :author %>
  </div>
</div>
<div class="form-group">
  <%= f.label :category_id %><br>
  <div class="col-md-8">
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>
</div>
<div class="form-group">
  <%= f.label :price %><br>
  <div class="col-md-8">
    <%= f.text_field :price %>
  </div>
</div>
<div class="form-group">
  <%= f.label :description %><br>
  <div class="col-md-8">
    <%= f.text_field :description %>
  </div>
</div>
<div class="form-group">
  <%= f.label :rating %><br>
  <div class="col-md-8">
    <%= f.text_field :rating %>
  </div>
</div>
<div class="actions">
  <%= f.submit 'Add Book', class: "btn btn-success" %>
</div>
<% end %>