<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @comic.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @comic.author %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @comic.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @comic.description %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= @comic.rating %>
  </p>

  <%= link_to 'Edit', edit_comic_path(@comic), class: "btn btn-success" %> |
  <%= link_to 'Back', comics_path, class: "btn btn-info" %>
</div>
